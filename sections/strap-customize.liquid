        const params = {
            data : null,
            jsonRowData: null,
            jsonData: [],
            selectedCollection: '',
            selectedModel: '',
        }

        const int = () => {
            
            console.log('strap init');

            // add output contianer
            {% comment %} document.body.insertAdjacentHTML('beforeend', '<div class="strapenginescreen"><div class="strapengine"></div></div>'); {% endcomment %}
           
            readData();
